---
import Layout from "../layouts/Layout.astro";
import Logo from "../components/Logo.astro";
import Manifest from "../components/Manifest.astro";
---

<Layout title="LEGALISER" description="Legalisering er den eneste løsning! KOM TIL FOLKEDEMO LØRDAG D. 30 SEPTEMBER">
	<main>
		<Logo/>

		<h1 class="legaliser-heading">LEGALISÉR</h1>
		<!-- <h1 class="text-gradient">LEGALISÉR</h1> -->

		<h2>Kom til folkedemo lørdag den 30. september klokken 12</h2>
		<Manifest/>
	</main>
</Layout>

<style>
	h1 {
		margin-bottom: 0;

		font-family: "Gill sans extra bold condensed";
		font-size: 7em;
		font-weight: 700;
		line-height: 1;
		text-align: center;
	}
	@media screen and (min-width: 400px) {
		h1 {
			margin-bottom: 5vw;
		}
	}
	h2 {
		font-size: 1.4em;
		text-transform: uppercase;
        letter-spacing: 0.1em;
    }
	.legaliser-heading {
		text-indent: -5000rem;
		background: url("../assets/image/legaliser.svg") no-repeat center;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
</style>
